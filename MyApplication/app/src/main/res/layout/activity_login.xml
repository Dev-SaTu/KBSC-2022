<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC000">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_logo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/sd_card_login"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:text="로그인 정보 입력"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/apple_bold"/>

                <android.widget.EditText
                    android:id="@+id/idEditText"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/sd_text_box_login"
                    android:backgroundTint="#E5E5E5"
                    android:fontFamily="@font/apple_bold"
                    android:paddingLeft="12dp"
                    android:hint="계정명"
                    android:textColorHint="#747474"
                    android:textSize="15sp" />

                <android.widget.EditText
                    android:id="@+id/pwEditText"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/sd_text_box_login"
                    android:backgroundTint="#E5E5E5"
                    android:fontFamily="@font/apple_bold"
                    android:paddingLeft="12dp"
                    android:hint="비밀번호"
                    android:textColorHint="#747474"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="clip_horizontal|clip_vertical"
                    android:orientation="horizontal">

                    <android.widget.Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:text="아이디/비밀번호 찾기"
                        android:textColor="#747474"
                        android:textSize="12sp"
                        android:fontFamily="@font/apple_bold"/>

                    <android.widget.Button
                        android:id="@+id/sign_up_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:text="회원가입"
                        android:textColor="#FFC000"
                        android:textSize="12sp"
                        android:fontFamily="@font/apple_bold"/>

                </LinearLayout>

            </LinearLayout>

            <android.widget.Button
                android:id="@+id/login_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/sd_btn_login"
                android:fontFamily="@font/apple_bold"
                android:text="로그인"
                android:textSize="20sp"
                android:textStyle="bold" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
