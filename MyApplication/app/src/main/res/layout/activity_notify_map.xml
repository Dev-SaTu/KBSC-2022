<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/neo_b"
                android:text="주변 알림"
                android:textColor="@color/black"
                android:textSize="33sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp">

                <android.widget.Button
                    android:id="@+id/map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sd_btn_toggle_off"
                    android:color="@color/white"
                    android:fontFamily="@font/neo_m"
                    android:minHeight="0dp"
                    android:text="지도"
                    android:textColor="@color/color2"></android.widget.Button>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Space>

                <android.widget.Button
                    android:id="@+id/store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sd_btn_toggle_off"
                    android:color="@color/white"
                    android:fontFamily="@font/neo_m"
                    android:minHeight="0dp"
                    android:text="복지기관"
                    android:textColor="@color/color2"></android.widget.Button>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Space>

                <android.widget.Button
                    android:id="@+id/welfare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sd_btn_toggle_off"
                    android:color="@color/white"
                    android:fontFamily="@font/neo_m"
                    android:minHeight="0dp"
                    android:text="나눔음식점"
                    android:textColor="@color/color2"></android.widget.Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="복지기관 인증이 필요합니다."
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <android.widget.Button
                    android:id="@+id/certify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/sd_btn_apply"
                    android:minHeight="0dp"
                    android:text="알아보기"
                    android:textColor="@color/white"></android.widget.Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>