<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.widget.TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/neo_b"
        android:text="인증"
        android:textColor="@color/black"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:gravity="center">

        <android.widget.TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인증 대상의 아이디를 입력해주세요."
            android:gravity="center"
            android:textSize="24sp"
            android:fontFamily="@font/apple_bold"
            android:textColor="@color/color5" />

        <android.widget.EditText
            android:id="@+id/change_type_userId_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingLeft="12dp"
            android:background="@drawable/sd_text_box_full"
            android:hint="여기에 입력하세요."
            android:fontFamily="@font/apple_bold"
            android:textColor="@color/color5"
            android:inputType="textPersonName" />

        <android.widget.Button
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@drawable/sd_btn_apply"
            android:id="@+id/allow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="인증" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>